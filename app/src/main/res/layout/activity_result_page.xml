<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultPage"
    android:orientation="vertical"
    android:background="@drawable/resultbg"
    android:gravity="center_horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="RESULT"
        android:textSize="40dp"
        android:textColor="@color/white"
        android:layout_margin="10dp">

    </TextView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/trophy">

    </ImageView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yayyy!! Congratulations, You Have Answered All Questions !!"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textColor="@color/black">

    </TextView>
    <TextView
        android:id="@+id/usernamepanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>
    <TextView
        android:id="@+id/finalresultpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="You have scored X out of Y points"
        android:textSize="20dp">

    </TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/finishbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/sqrbuttonincorrect">
    </androidx.appcompat.widget.AppCompatButton>
</LinearLayout>
</LinearLayout>